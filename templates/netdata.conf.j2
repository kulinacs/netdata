# NetData Configuration
#
# To see defaults, grab one from your instance:
# http://localhost:19999/netdata.conf

# global netdata configuration

[global]
        run as user = _netdata
        web files owner = root
        web files group = root
        # Netdata is not designed to be exposed to potentially hostile networks
        # See https://github.com/firehol/netdata/issues/164
        bind to = {{ netdata_bind_to }}
	memory mode = {{ netdata_memory_mode }}

[web]
	mode = {{ netdata_web_mode }}

[backend]
	enabled = {{ netdata_backend_enabled }}
	{% if netdata_backend_enabled == 'yes' %}
	type = {{ netdata_backend_type }}
	destination = {{ netdata_backend_destination }}
	update every = {{ netdata_backend_update }}
	{% endif %}
