{% if netdata_stream_mode == 'slave' %}
[stream]
	enabled = yes
	destination = {{ netdata_stream_destination }}:{{ netdata_stream_destination_port }}
	api key = {{ netdata_api_key }}
{% endif %}
{% if netdata_stream_mode == 'master' %}
[{{ netdata_api_key }}]
	    enabled = yes
	    default history = 3600
	    default memory mode = save
	    health enabled by default = auto
{% endif %}
